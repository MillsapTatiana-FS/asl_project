<form method="POST" action="/variants/{% if variant.id %}{{ variant.id }}{% endif %}">
    {% if variant.id %}
        <input name="id" type="hidden" value="{{ variant.id }}" />
    {% endif %}
    <div>
        <label for="title">Title:</label>
        <input type="text" name="title" id="title" value="{{ variant.title }}"/>
    </div>
    <div>
        <label>Product :</label>
        <select name="productId">
            {% for product in products %}
                <option 
                    value="{{ product.id }}" 
                    {% if product.id == variant.product.Id %} selected="selected"{% endif %}>
                    {{ product.title }}
                </option>
             {% endfor %} 
        </select>
    </div>
    <div>
        <input type="submit" type="submit" />
    </div>
</form>